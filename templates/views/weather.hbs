<html lang="en">
  <head>
    {{>headerlink}}
    <title>Weather App</title>
  </head>
  <body> 
    
    {{>navbar}}
    <!-- main haeder -->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="main-content">
            <form class="temp_form">
                <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                <input type="submit" value="search" id="SubmitButton">
            </form>
         </div>  
        <div class="tempInfo">
            <div class="top_layer">
                <p id="day">Tuesday</p>
                <p id="today_date">4 Oct</p>
            </div>
            <div class="main_layer">
                <p id="city_name">Get output here!</p>
                <div class="middle_layer data_hide">
                    <p id="temp"><span id="temp_real">0</span><sup>o</sup>C</p>
                    <p id="temp_status"><i class=" fa fa-solid fa-cloud"></i></p>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>
  </body>
</html>